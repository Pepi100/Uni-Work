<link href="/resurse/css/galerie_statica.css" rel="stylesheet" type="text/css" />




<section id="galerie_statica">
    
    <% 
    anotimpuri = ["iarna", "iarna", "primavara", "primavara", "primavara", "vara", "vara", "vara", "toamna", "toamna", "toamna", "iarna"]

    d = new Date()
    counter = 0
    for(let imag of locals.imagini){ 
        
        if(13 > counter  && imag.anotimp && imag.anotimp.includes( anotimpuri[d.getMonth()] )){
            counter = counter + 1
        
        %>

        <div>
            <figure id="imagini_galerie_statica">
                <picture>
                    <source srcset = "<%- imag.mic %>" media="(max-width:500px)" />
                    <source srcset = "<%- imag.mediu %>" media="(max-width:700px)" />
                    <img src="<%-imag.mare %>" alt="ceva" />

                </picture>
                <figcaption><%-imag.titlu %></figcaption>


            </figure>
        </div>
        
  <%  }
        } %>
        
        <div id="despre1">
            <a href="galerie">Pagina galeriei statice</a>
        </div>
        
        <div id="despre2">
            <p >Alt text!</p>
        </div>
        


</section>




